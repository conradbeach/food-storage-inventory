<%= form_with(model: [@storage_type, category], local: true) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :unit_type %>
    <%= form.select :unit_type, Category.unit_types.keys %>
  </div>

  <div class="field">
    <%= form.label :units_per_year_per_adult %>
    <%= form.number_field :units_per_year_per_adult, min: 0, step: 0.1 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
